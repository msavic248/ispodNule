---
const navLinks = [
    { href: '/', text: 'Home' },
    { href: '/', text: 'Services' },
    { href: '/', text: 'Projects' },
    { href: '/', text: 'Contact' }
];
---

<header id="site-header" class="fixed w-full px-4 sm:px-6 lg:px-8 top-0 z-50 transition-all duration-300 ease-in-out">
    <div class="flex h-16 w-fit max-w-7xl mx-auto">
        <!-- Navigation with logo in the middle -->
        <nav class="bg-ispod-white/50 dark:bg-ispod-jet/50 backdrop-blur-sm flex items-center space-x-4 w-full justify-center border-b-2 rounded-3xl shadow my-2 px-4">
            <!-- First half of nav links -->
            <div class="flex space-x-4">
            {navLinks.slice(0, Math.ceil(navLinks.length / 2)).map(link => (
                <a 
                href={link.href} 
                class="text-ispod-jet hover:text-gray-900 dark:text-ispod-white dark:hover:text-gray-200 px-3 py-2 text-sm font-medium transition duration-150 ease-in-out"
                >
                {link.text}
                </a>
            ))}
            </div>
            
            <!-- Logo in the middle -->
            <div class="flex-shrink-0 flex items-center mx-4">
            <a href="/" class="text-xl font-bold text-ispod-blue dark:text-ispod-yellow">
                <!-- Replace with your actual logo when available -->
                <span>Ispod Nule</span>
                <!-- <img class="h-8 w-auto" src="/path-to-your-logo.svg" alt="Logo"> -->
            </a>
            </div>
            
            <!-- Second half of nav links -->
            <div class="flex space-x-4">
            {navLinks.slice(Math.ceil(navLinks.length / 2)).map(link => (
                <a 
                href={link.href} 
                class="text-ispod-jet hover:text-gray-900 dark:text-ispod-white dark:hover:text-gray-200 px-3 py-2 text-sm font-medium transition duration-150 ease-in-out"
                >
                {link.text}
                </a>
            ))}
            </div>
        </nav>
    </div>
</header>

<script>
    let lastScrollY = window.scrollY;
    const header = document.getElementById('site-header');
    
    // Function to handle scroll events with a small threshold
    const handleScroll = () => {
        const currentScrollY = window.scrollY;
        
        // Only react if we've scrolled at least 5px
        if (Math.abs(currentScrollY - lastScrollY) < 5) return;
        
        if (currentScrollY > lastScrollY && currentScrollY > 50) {
            // Scrolling down & past threshold
            header?.classList.add('opacity-0', '-translate-y-full');
        } else {
            // Scrolling up or at the top
            header?.classList.remove('opacity-0', '-translate-y-full');
        }
        
        lastScrollY = currentScrollY;
    };
    
    // Debounce function for better performance
    let scrollTimeout: number | undefined;
    window.addEventListener('scroll', () => {
        if (scrollTimeout) {
            window.cancelAnimationFrame(scrollTimeout);
        }
        scrollTimeout = window.requestAnimationFrame(handleScroll);
    }, { passive: true });
</script>